<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relatório de Alunos</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="css/index.css">
    <style>
        nav {
            background-color: darkgray;
        }

        .container {
            margin-top: 2.6rem;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light fixed-top mb-3">
            <a class="navbar-brand ml-sm-5" href="/">Biblioteca de Livros</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#conteudoNavbarSuportado"
                aria-controls="conteudoNavbarSuportado" aria-expanded="false" aria-label="Alterna navegação">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="conteudoNavbarSuportado">
                <ul class="navbar-nav m-auto ">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home <span class="sr-only">(Pagina Principal)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cadastrarLivros">Cadastro<span class="sr-only">(Cadastro de
                                Livros)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/relatorioLivros">Relatório<span class="sr-only">(Relatório de
                                Livros)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cadastrarClientes">Clientes<span class="sr-only">(Cadastro de
                                Clientes)</span></a>
                    </li>
                </ul>
                
            </div>
        </nav>
    </header>

    <div class="container">
       
        <div class="row">
           
            <div class="col">
               
                <div class="row mt-5  text-center">
                    
                    <div class="col-5">
                        <h1>Relatório de Livros</h1>
                    </div>
                   
                    
                    
                    
                        <form action="/relatorioLivros/pesquisar>" class="form-inline my-2 my-lg-0 col-7">
                            <div class=" form-group">
                                <!-- <label for="assunto">Assunto do Livro</label> -->
                                <select class="form-control" name="tipo_pesquisa" id="tipo_pesquisa" required>Tipo Pesquisa
                                    <option value="" selected>Pesquisar por..</option>
                                    <option value="nome_Livro">Nome Livro</option>
                                    <option value="nome_Autor">Autor</option>
                                    <option value="editora">Editora</option>
                                    <option value="assunto">Assunto</option>
                                </select>
                            </div>
                            <div class="">
                            <input class="form-control mr-sm-2" type="text" placeholder="Pesquisar"
                                aria-label="Pesquisar" id="pesquisar" name="pesquisar" value="">
                            <button id="pesquisa" class="btn btn-success my-2 my-sm-0" type="submit"><svg
                                    xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-search" viewBox="0 0 16 16">

                                    <path
                                        d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                </svg>
                            </button>
                            </div>
                        </form>
                   
                    <div class="table-responsive-sm">
                        <table class="table table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Livro</th>
                                    <th>Edição</th>
                                    <th>Assunto</th>
                                    <th>Editora</th>
                                    <th>Autor(a)</th>
                                    <th>ISBN</th>
                                    <th>Estoque</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% lista_livros.forEach(function(livro){ %>
                                    <tr>
                                        <td>
                                            <%= livro.nome_Livro %>
                                        </td>
                                        <td>
                                            <%= livro.num_Edicao %>
                                        </td>
                                        <td>
                                            <%= livro.assunto %>
                                        </td>
                                        <td>
                                            <%= livro.editora %>
                                        </td>
                                        <td>
                                            <%= livro.nome_Autor %>
                                        </td>
                                        <td>
                                            <%= livro.isbn %>
                                        </td>
                                        <td>
                                            <%= livro.quantidade_Estoque %>
                                        </td>
                                        <td>
                                            <a href="/editarLivros/<%= livro._id%>" class="btn btn-warning">Editar</a>
                                            <a href="/deletarLivros/<%= livro._id%>" class="btn btn-danger">Excluir</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% if(lista_livros=="" ){%>
                                            <div class="alert alert-danger">Lista Vazia</div>
                                            <% } %>
                                            
                            </tbody>
                        </table>
                    </div>
                    <div class="col-12 justify-content-center">
                        <a href="/cadastrarLivros" class="btn btn-dark">Cadastrar Livros</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
            integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
            integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
            crossorigin="anonymous"></script>

</body>

</html>